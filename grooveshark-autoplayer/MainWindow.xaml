<Window x:Class="grooveshark_autoplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grooveshark"
		Icon="Resources/Icon.ico" >

        <Grid>
            
        <Menu IsMainMenu="True">
            <MenuItem Header="_File" Click="MenuItem_Click" >
                <MenuItem Header="Play Automatically" IsCheckable="True" HorizontalAlignment="Right" Width="182" />
            </MenuItem>
        </Menu>
        <WebBrowser x:Name="browser" Source="http://grooveshark.com" LoadCompleted="BrowserLoadCompleted" Margin="0,24,0,0" />
    </Grid>
    

</Window>
    
    

